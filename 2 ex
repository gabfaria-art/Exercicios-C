#include <stdio.h>

int main() {
        float base;
    float altura;
    float area;
    
    printf("Qual é a altura do triângulo?");
    scanf("%f" , &altura);
    printf("Qual é o comprimento da base do triângulo?");
    scanf("%f" , &base);
    
    area=base*altura/2;
    
    printf("A área do triângulo é: %2.f\n" , area);
    
    return(0);

}
