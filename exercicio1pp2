#include <stdio.h>
#include <locale.h>
int main() { 
    char nome1[50];
    char nome2[50];
    int idade1;
    int idade2;
    
    printf("Introduza os dados da primeira pessoa!");
    printf("\nNome:");
    scanf("%s", nome1);
    printf("Idade:");
    scanf("%d", &idade1);
    printf("Introduza os dados da segunda pessoa!");
    printf("\nNome:");
    scanf("%s", nome2);
    printf("Idade:");
    scanf("%d", &idade2);
    
    if (idade1>idade2) {
        printf("%s é a pessoa mais velha.\n", nome1);
    }
    else if (idade1<idade2) {
        printf("%s é a pessoa mais velha.\n", nome2);
    }
    else {
        printf("Ambas as pessoas têm a mesma idade.");
    }
    
    return 0;
}
