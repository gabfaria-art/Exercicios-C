#include <stdio.h>

int main() {
  char nome1[50];
  float salario1;
  char nome2[50];
  float salario2;
  float media;


  printf("Introduza o 1º nome:");
  scanf("%s%" , nome1);
  printf("Introduza o 1º salário:");
  scanf("%f%" , &salario1);
  printf("Introduza o 2º nome:");
  scanf("%s%" , nome2);
  printf("Introduza o 2º salário:");
  scanf("%f%" , &salario2);

  media=(salario1+salario2)/2;

  printf("Media do salário dos dois funcionários:%f\n" , media);
  return 0;
 }
